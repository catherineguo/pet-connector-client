{{#each checklists as |checklist|}}
<div class="col-md-4">
  <div class="card">
  <h3 class="card-header">{{checklist.title}}</h3>
    <div class="card-body">
      <section data-id="{{checklist.id}}">
        <p class="card-text"><strong>Start date:</strong> {{checklist.start_date}}
          <br>
          <strong>End date:</strong> {{checklist.end_date}}
          <br>
          <strong>Pet Name:</strong> {{checklist.pet_name}}
          <br>
          <strong>Instructions:</strong>
          <br>
          {{checklist.instructions}}</p>
        <div class="delete-edit-buttons">
          <button type="button" class="btn btn-outline-danger" id="delete-button">Delete</button>
          <button class="btn btn-outline-primary" type="button" data-toggle="modal" data-target=".update-checklist-modal" id="edit-button">Edit</button>
        </div>
      </section>
    </div>
  </div>
</div>
{{/each}}
